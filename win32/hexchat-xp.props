copy "$(DepsRoot)\bin\libatk-1.0-0.dll" "$(HexChatRel)"
copy "$(DepsRoot)\bin\libcairo-2.dll" "$(HexChatRel)"
copy "$(DepsRoot)\bin\libexpat-1.dll" "$(HexChatRel)"
copy "$(DepsRoot)\bin\libfontconfig-1.dll" "$(HexChatRel)"
